{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./public",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
    },
    "include": [
        "./api/*",
        "src/**/*.ts",
        "src/routes/**/*.ts"
    ],
    "exclude": ["node_modules"]
}